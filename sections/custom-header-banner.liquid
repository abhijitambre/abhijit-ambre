{% style %}
  .custom-section {
  font-family: Arial, sans-serif;
}
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}
.header-section .logo img {
  max-height: 50px;
}
.header-section .menu ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}
.header-section .menu ul li {
  margin: 0 10px;
}
.header-section .header-button .btn {
  background-color: #000;
  color: #fff;
  padding: 10px 15px;
  text-decoration: none;
}
.banner-section {
  position: relative;
  overflow: hidden;
}
.banner-image {
  width: 100%;
  height: auto;
  display: block;
}
.banner-content {
  position: absolute;
  color: #fff;
  text-align: center;
}
.banner-content.top-left {
  top: 10%;
  left: 10%;
}
.banner-content.top-right {
  top: 10%;
  right: 10%;
}
.banner-content.center-center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.banner-content.bottom-left {
  bottom: 10%;
  left: 10%;
}
.banner-content.bottom-right {
  bottom: 10%;
  right: 10%;
}
.promo-carousel {
  margin-top: 20px;
  text-align: center;
  overflow: hidden;
}
.carousel-wrapper {
  display: flex;
  animation: scroll-text 10s linear infinite;
}
.carousel-slide {
  min-width: 100%;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  padding: 10px 0;
}
@keyframes scroll-text {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-100%);
  }
}
{% endstyle %}


<div class="custom-section">
  <!-- Header Section -->
  <header class="header-section">
    <div class="logo">
      {% if settings.header_logo %}
      <a href="{{ shop.url }}">
        <img src="{{ settings.header_logo | asset_url }}" alt="{{ shop.name }}" />
      </a>
      {% else %}
      <h1>{{ shop.name }}</h1>
      {% endif %}
    </div>
    <nav class="menu">
      <ul>
        {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    <div class="header-button">
      {% if settings.header_button_text and settings.header_button_url %}
      <a href="{{ settings.header_button_url }}" class="btn">{{ settings.header_button_text }}</a>
      {% endif %}
    </div>
  </header>

  <!-- Banner Section -->
  <div class="banner-section">
    {% if settings.banner_image %}
    <img src="{{ settings.banner_image | asset_url }}" alt="Banner Image" class="banner-image" />
    {% endif %}
    <div class="banner-content {{ settings.content_position }}">
      <h1>{{ settings.banner_heading }}</h1>
      <p>{{ settings.banner_description }}</p>
      {% if settings.banner_button_url and settings.banner_button_text %}
      <a href="{{ settings.banner_button_url }}" class="btn">{{ settings.banner_button_text }}</a>
      {% endif %}
    </div>
  </div>

  <!-- Promotional Text Carousel -->
  <div class="promo-carousel">
    <div class="carousel-wrapper">
      {% for block in section.blocks %}
      <div class="carousel-slide">
        <p>{{ block.settings.promo_text }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', () => {
  const carouselWrapper = document.querySelector('.carousel-wrapper');
  if (!carouselWrapper) return;

  // Adjust scrolling animation if hovering over text
  carouselWrapper.addEventListener('mouseover', () => {
    carouselWrapper.style.animationPlayState = 'paused';
  });
  carouselWrapper.addEventListener('mouseout', () => {
    carouselWrapper.style.animationPlayState = 'running';
  });
});
</script>

{% schema %}
{
  "name": "Custom Banner with Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading"
    },
    {
      "type": "textarea",
      "id": "banner_description",
      "label": "Banner Description"
    },
    {
      "type": "url",
      "id": "banner_button_url",
      "label": "Banner Button Link"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Banner Button Text"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Banner Content Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-center", "label": "Center Center" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "center-center"
    }
  ],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text Slide",
      "settings": [
        {
          "type": "text",
          "id": "promo_text",
          "label": "Promotional Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Banner with Text Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}
