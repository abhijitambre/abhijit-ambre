{%- style -%}
.custom-section {
  font-family: Arial, sans-serif;
}
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}
.header-section .logo img {
  max-height: 50px;
}
.header-section .menu ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}
.header-section .menu ul li {
  margin: 0 10px;
}
.header-section .header-button .btn {
  background-color: #000;
  color: #fff;
  padding: 10px 15px;
  text-decoration: none;
}
.banner-section {
  position: relative;
}
.banner-image {
  width: 100%;
  height: auto;
}
.banner-content {
  position: absolute;
  color: #fff;
  text-align: center;
}
  .banner-content{
    width:40%;
    color:#111;
  }
.banner-content.center-center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.promo-carousel {
  margin-top: 20px;
  text-align: center;
  overflow: hidden;
}
.carousel-wrapper {
  display: flex;
  animation: scroll-text 10s linear infinite;
}
.carousel-slide {
  min-width: 100%;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  padding: 10px 0;
}
@keyframes scroll-text {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-100%);
  }
}
{%- endstyle -%}


<div class="custom-section">
  <!-- Header Section -->
  <header class="header-section">
    <div class="logo">
      <a href="{{ shop.url }}">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" />
      </a>
    </div>
    <nav class="menu">
      <ul>
        {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    <div class="header-button">
      <a href="/contact" class="btn">Contact Us</a>
    </div>
  </header>

  <!-- Banner Section -->
  <div class="banner-section">
    {% if section.settings.banner_image %}
    <img src="{{ section.settings.banner_image | img_url: '1440x780' }}" alt="Banner" class="banner-image" />
    {% endif %}
    <div class="banner-content style="
        top: {{ settings.content_position_top }}%; 
        bottom: {{ settings.content_position_bottom }}%; 
        left: {{ settings.content_position_left }}%; 
        right: {{ settings.content_position_right }}%; 
        transform: translate(-{{ settings.content_position_left }}%, -{{ settings.content_position_top }}%);
      >
      <h1>{{ section.settings.banner_heading }}</h1>
      <p>{{ section.settings.banner_description }}</p>
      {% if section.settings.banner_button_url and section.settings.banner_button_text %}
      <a href="{{ section.settings.banner_button_url }}" class="btn">{{ section.settings.banner_button_text }}</a>
      {% endif %}
    </div>
  </div>

  <!-- Promotional Text Carousel -->
  <div class="promo-carousel">
    <div class="carousel-wrapper">
      {% for block in section.blocks %}
      <div class="carousel-slide">
        <p>{{ block.settings.promo_text }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>



<!-- Scripts -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const carouselWrapper = document.querySelector('.carousel-wrapper');
  if (!carouselWrapper) return;

  // Adjust scrolling animation if hovering over text
  carouselWrapper.addEventListener('mouseover', () => {
    carouselWrapper.style.animationPlayState = 'paused';
  });
  carouselWrapper.addEventListener('mouseout', () => {
    carouselWrapper.style.animationPlayState = 'running';
  });
});
</script>


{% schema %}
{
  "name": "Banner with Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading"
    },
    {
      "type": "textarea",
      "id": "banner_description",
      "label": "Banner Description"
    },
    {
      "type": "url",
      "id": "banner_button_url",
      "label": "Banner Button Link"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Banner Button Text"
    },
    {
      "type": "range",
      "id": "content_position_top",
      "label": "Content Top Offset (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "range",
      "id": "content_position_bottom",
      "label": "Content Bottom Offset (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "content_position_left",
      "label": "Content Left Offset (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "range",
      "id": "content_position_right",
      "label": "Content Right Offset (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text Slide",
      "settings": [
        {
          "type": "text",
          "id": "promo_text",
          "label": "Text Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner with Text Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}