{%- style -%}
.custom-section {
  font-family: Arial, sans-serif;
}
.header-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    position: relative;
  }

  /* Hamburger Menu */
  .hamburger-menu {
    display: none;
  }

  .hamburger-btn {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .hamburger-btn span {
    display: block;
    width: 25px;
    height: 3px;
    background: #333;
    transition: transform 0.3s, opacity 0.3s;
  }

  .hamburger-btn.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger-btn.open span:nth-child(2) {
    opacity: 0;
  }

  .hamburger-btn.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Mobile Menu */
  .menu {
    display: none;
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 9;
  }

  .mobile-menu.menu-open {
    display: flex;
  }

  /* Desktop Text Block */
  .desktop-text {
    display: none;
    font-size: 16px;
    color: #333;
    text-align: center;
    flex-grow: 1;
  }

.header-section .logo img {
  max-height: 50px;
}
.header-section .menu ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}
.header-section .menu ul li {
  margin: 0 10px;
}
.banner-section {
  position: relative;
}
.banner-image {
  width: 100%;
  height: auto;
}
.banner-content {
  position: absolute;
  color: #fff;
  text-align: center;
}
  .banner-content{
    width:40%;
    color:#111;
  }
.banner-content.top-left {
  top: 10%;
  left: 0%;
}
.banner-content.top-right {
  top: 10%;
  right: 0%;
}
.banner-content.center-center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.banner-content.bottom-left {
  bottom: 10%;
  left: 0%;
}
.banner-content.bottom-right {
  bottom: 10%;
  right: 0%;
}
.promo-carousel {
  margin-top: 20px;
  text-align: center;
  overflow: hidden;
}
.carousel-wrapper {
  display: flex;
  animation: scroll-text 10s linear infinite;
}
.carousel-slide {
  min-width: 100%;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  padding: 10px 0;
}
    .sliding-btn {
 width: 100%;
 height: 100%;;
 border-radius: 30em;
 font-size: 15px;
 font-family: inherit;
 border: none;
 position: relative;
 overflow: hidden;
      background-color:yellow;
 z-index: 1;
      padding: 10px 15px;
}

.sliding-btn::before {
 content: '';
 width: 0;
 height: 100%;
 border-radius: 30em;
 position: absolute;
 top: 0;
 left: 0;
 background-color: #111;
 transition: .5s ease;
 display: block;
 z-index: -1;
  padding: 10px 15px;
}

.sliding-btn:hover::before {
 width: 100%;
  z-index: 2;
}
@keyframes scroll-text {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-100%);
  }
}
  
  @media (max-width: 768px) {
    .menu {
      display: none;
    }

    .hamburger-menu {
      display: block;
    }

    .desktop-text {
      display: none;
    }
  }

  @media (min-width: 769px) {
    .hamburger-menu {
      display: none;
    }

    .desktop-text {
      display: block;
    }
  }
{%- endstyle -%}


<div class="custom-section">
  <!-- Header Section -->
  <header class="header-section">
    <!-- Hamburger Menu (Visible only in Mobile View) -->
    <div class="hamburger-menu">
      <button class="hamburger-btn" aria-label="Toggle Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>

    <!-- Logo -->
    <div class="logo">
      <a href="{{ shop.url }}">
        <img src="{{ section.settings.logo_img | img_url: 'master' }}" alt="{{ shop.name }}" />
      </a>
    </div>

    <!-- Desktop Text Block (Visible only in Desktop View) -->
    <div class="desktop-text">
      <p>{{ section.settings.desktop_text }}</p>
    </div>

    <!-- Header Button -->
    <div class="header-button">
      <a href="/contact" class="btn sliding-btn">Contact Us</a>
    </div>

    <!-- Mobile Menu -->
    <nav class="menu mobile-menu">
      <ul>
        {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </header>

  <!-- Banner Section -->
  <div class="banner-section">
    {% if section.settings.banner_image %}
    <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="Banner" class="banner-image" />
    {% endif %}
    <div class="banner-content {{ section.settings.content_position }}">
      <h1>{{ section.settings.banner_heading }}</h1>
      <p>{{ section.settings.banner_description }}</p>
      {% if section.settings.banner_button_url and section.settings.banner_button_text %}
      <a href="{{ section.settings.banner_button_url }}" class="btn">{{ section.settings.banner_button_text }}</a>
      {% endif %}
    </div>
  </div>

  <!-- Promotional Text Carousel -->
  <div class="promo-carousel">
    <div class="carousel-wrapper">
      {% for block in section.blocks %}
      <div class="carousel-slide">
        <p>{{ block.settings.promo_text }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>






<!-- Scripts -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const carouselWrapper = document.querySelector('.carousel-wrapper');
  if (!carouselWrapper) return;

  // Adjust scrolling animation if hovering over text
  carouselWrapper.addEventListener('mouseover', () => {
    carouselWrapper.style.animationPlayState = 'paused';
  });
  carouselWrapper.addEventListener('mouseout', () => {
    carouselWrapper.style.animationPlayState = 'running';
  });
});
  document.addEventListener("DOMContentLoaded", function () {
    const hamburgerBtn = document.querySelector(".hamburger-btn");
    const mobileMenu = document.querySelector(".mobile-menu");

    hamburgerBtn.addEventListener("click", function () {
      mobileMenu.classList.toggle("menu-open");
      hamburgerBtn.classList.toggle("open");
    });
  });
</script>


