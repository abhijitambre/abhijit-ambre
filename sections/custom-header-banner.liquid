{%- style -%}
.custom-section {
  font-family: Arial, sans-serif;
}
.header-section {
    display: grid;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    position: relative;
    grid-template-columns: 1fr 2fr 1fr;
  }

  /* Hamburger Menu */
  .hamburger-menu {
    display: none;
  }

  .hamburger-btn {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .hamburger-btn span {
    display: block;
    width: 25px;
    height: 3px;
    background: #333;
    transition: transform 0.3s, opacity 0.3s;
  }

  .hamburger-btn.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger-btn.open span:nth-child(2) {
    opacity: 0;
  }

  .hamburger-btn.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Mobile Menu */
  .menu {
    display: none;
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 9;
  }

  .mobile-menu.menu-open {
    display: flex;
  }

  /* Desktop Text Block */
  .desktop-text {
    display: none;
    font-size: 16px;
    color: #333;
    text-align: center;
    flex-grow: 1;
  }
.logo{
  text-align:center;
}
.header-section .logo img {
  max-height: 50px;
}
.header-section .menu ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}
.header-section .menu ul li {
  margin: 0 10px;
}
  .header-button{
    text-align:right;
  }
.header-button button {
 width: max-content;
  padding:10px 30px;
 height: 3em;
font-size: 15px;
 font-family: inherit;
 border: none;
 position: relative;
 overflow: hidden;
 z-index: 1;
 box-shadow: 6px 6px 12px #c5c5c5,
             -6px -6px 12px #ffffff;
             background:yellow;
  padding-left:30px;
  padding-right:30px;
  cursor:pointer; 
}

.header-button button::before {
 content: '';
 width: 0;
 height: 3em;
 position: absolute;
 top: 0;
 left: 0;
 background-image: linear-gradient(to right, #111 0%, #111 100%);
 transition: .5s ease;
 display: block;
 z-index: -1;
}
.header-button button:hover{
color:#fff;
}
.header-button button:hover::before {
 width: 100%;
}
.banner-section {
  position: relative;
}
.banner-image {
  width: 100%;
  height: auto;
}
.banner-content {
  position: absolute;
  color: #fff;
  text-align: center;
}
  .banner-content{
    width:40%;
    color:#111;
  }
.banner-content.top-left {
  top: 10%;
  left: 0%;
}
.banner-content.top-right {
  top: 10%;
  right: 0%;
}
.banner-content.center-center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.banner-content.bottom-left {
  bottom: 10%;
  left: 0%;
}
.banner-content.bottom-right {
  bottom: 10%;
  right: 0%;
}
